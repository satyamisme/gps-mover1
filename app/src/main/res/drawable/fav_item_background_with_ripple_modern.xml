<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/favorite_item_background_pressed">
    
    <item android:id="@android:id/background">
        <layer-list>
            <!-- Shadow Layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="2dp" android:right="2dp" />
                </shape>
            </item>
            
            <!-- Main Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/favorite_item_background" />
                    <corners android:radius="8dp" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/favorite_item_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/favorite_item_background_pressed" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</ripple> 
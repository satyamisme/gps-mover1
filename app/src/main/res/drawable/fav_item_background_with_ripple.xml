<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/favorite_item_background_pressed">
    
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/favorite_item_background" />
            <corners android:radius="5dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/favorite_item_stroke" />
        </shape>
    </item>
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/favorite_item_background_pressed" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    
</ripple> 
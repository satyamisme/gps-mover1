<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FabRounded2dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>
    
    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">25dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="FavoritesHeaderTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">21sp</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:alpha">0</item>
    </style>

</resources> 